<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Toolbars  -->
    <style name="Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:elevation">@dimen/toolbar_default_elevation</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
    </style>
    <style name="Toolbar.WithUpButton" parent="Toolbar">
        <item name="navigationIcon">?homeAsUpIndicator</item>
    </style>

    <!--  FABs  -->
    <style name="FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margin_default</item>
        <item name="fabSize">normal</item>
    </style>
    <style name="FloatingActionButton.Add" parent="FloatingActionButton">
        <item name="android:src">@drawable/ic_baseline_add_24</item>
    </style>

    <!--  CardViews -->
    <style name="CardView.Default" parent="CardView">
        <item name="cardCornerRadius">@dimen/card_view_default_radius</item>
        <item name="elevation">@dimen/cardview_default_elevation</item>
        <item name="strokeWidth">@dimen/card_view_default_stroke_width</item>
        <item name="strokeColor">@color/divider</item>
    </style>
    <style name="CardView.EmptyScreenHint" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.EmptyScreenHint</item>
        <item name="elevation">@dimen/card_view_default_elevation_top</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.EmptyScreenHint">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">@dimen/card_view_default_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">@dimen/card_view_default_radius</item>
        <item name="cornerSizeTopRight">@dimen/card_view_default_radius</item>
    </style>

    <!--  Image buttons  -->
    <style name="ImageButton">
        <item name="android:layout_width">@dimen/image_button_width</item>
        <item name="android:layout_height">@dimen/image_button_height</item>
        <item name="android:background">@drawable/button_shape_circle</item>
        <item name="android:tint">?attr/colorOnSecondary</item>
    </style>
    <style name="ImageButton.PickContact" parent="ImageButton">
        <item name="android:src">@drawable/ic_baseline_person_search_24</item>
    </style>
    <style name="ImageButton.PickCustomer" parent="ImageButton">
        <item name="android:src">@drawable/ic_baseline_person_24</item>
    </style>
    <style name="ImageButton.SetDate" parent="ImageButton">
        <item name="android:src">@drawable/ic_baseline_today_24</item>
    </style>
    <style name="ImageButton.Call" parent="ImageButton">
        <item name="android:src">@drawable/ic_baseline_call_24</item>
    </style>
    <style name="ImageButton.SendMessage" parent="ImageButton">
        <item name="android:src">@drawable/ic_baseline_message_24</item>
    </style>
    <style name="ImageButton.Add" parent="ImageButton">
        <item name="android:src">@drawable/ic_baseline_add_24</item>
    </style>
    <style name="ImageButton.SetDir" parent="ImageButton">
        <item name="android:src">@drawable/ic_baseline_folder_24</item>
    </style>

    <!--  Tab layout  -->
    <style name="TabLayout">
        <!--<item name="android:background">?attr/colorPrimary</item>
        <item name="tabIconTint">?attr/colorOnPrimary</item>
        <item name="tabIndicatorColor">@color/white</item>-->
        <!--<item name="tabTextColor">@color/mtrl_tabs_icon_color_selector_colored</item>-->
        <item name="tabRippleColor">@color/mtrl_tabs_colored_ripple_color</item>
    </style>

    <!--  TextView  -->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextView.EmptyScreenHint" parent="TextView">
        <item name="android:padding">@dimen/text_view_empty_screen_default_padding</item>
        <item name="android:layout_marginBottom">@dimen/text_view_empty_screen_default_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/text_view_empty_screen_default_margin_end</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:elevation">@dimen/card_view_default_elevation_top</item>
    </style>
</resources>