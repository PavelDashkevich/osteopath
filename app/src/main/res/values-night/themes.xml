<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Osteopath" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/themeDarkPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/themeDarkPrimaryLightColor</item>
        <item name="colorOnPrimary">@color/themeDarkPrimaryTextColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/themeDarkSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/themeDarkSecondaryLightColor</item>
        <item name="colorOnSecondary">@color/themeDarkSecondaryTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>