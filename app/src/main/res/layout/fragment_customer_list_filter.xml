<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".features.customerlistfilter.FragmentCustomerListFilter">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="4dp"
        android:background="@color/design_default_color_primary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="?homeAsUpIndicator"
        app:title="Фильтр"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <TextView
        android:id="@+id/tv_by_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/gl_vertical_left"
        app:layout_constraintRight_toRightOf="@id/gl_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/tb_actions"
        android:text="@string/header_filter_by_age"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="16dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_by_age_children"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/gl_vertical_left"
        app:layout_constraintRight_toRightOf="@id/gl_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/tv_by_age"
        android:text="@string/filter_by_age_children"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
        android:paddingStart="16dp"
        tools:ignore="RtlSymmetry" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_by_age_adults"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/gl_vertical_left"
        app:layout_constraintRight_toRightOf="@id/gl_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/cb_by_age_children"
        android:text="@string/filter_by_age_adults"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple"
        android:paddingStart="16dp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/tv_by_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/gl_vertical_left"
        app:layout_constraintRight_toRightOf="@id/gl_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/cb_by_age_adults"
        android:text="@string/header_filter_by_category"
        android:textSize="16sp"
        android:textStyle="bold"
        android:paddingVertical="16dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_by_category_work"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_by_category"
        app:layout_constraintStart_toStartOf="@id/gl_vertical_left"
        app:layout_constraintEnd_toStartOf="@id/cb_by_category_work"
        app:layout_constraintBottom_toBottomOf="@id/cb_by_category_work"
        android:src="@drawable/ic_circle_mark"
        android:tint="@color/customer_status_work"
        android:paddingHorizontal="16dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_by_category_work"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_by_category_work"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/tv_by_category"
        android:text="@string/category_work"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_by_category_work_done"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_by_category_work"
        app:layout_constraintStart_toStartOf="@id/gl_vertical_left"
        app:layout_constraintEnd_toStartOf="@id/cb_by_category_work"
        app:layout_constraintBottom_toBottomOf="@id/cb_by_category_work_done"
        android:src="@drawable/ic_circle_mark"
        android:tint="@color/customer_status_work_done"
        android:paddingHorizontal="16dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_by_category_work_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_by_category_work_done"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/cb_by_category_work"
        android:text="@string/category_work_done"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_by_category_no_help"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_by_category_work_done"
        app:layout_constraintStart_toStartOf="@id/gl_vertical_left"
        app:layout_constraintEnd_toStartOf="@id/cb_by_category_work_done"
        app:layout_constraintBottom_toBottomOf="@id/cb_by_category_no_help"
        android:src="@drawable/ic_circle_mark"
        android:tint="@color/customer_status_no_help"
        android:paddingHorizontal="16dp"/>

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_by_category_no_help"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_by_category_work_done"
        app:layout_constraintEnd_toEndOf="@id/gl_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/cb_by_category_work_done"
        android:text="@string/category_no_help"
        android:button="@null"
        android:drawableEnd="?android:attr/listChoiceIndicatorMultiple" />


</androidx.constraintlayout.widget.ConstraintLayout>